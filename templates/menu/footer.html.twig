<footer>
	<div class="container mt-3">
		<div class="row">
			<div class="col-md-4 text-center my-3 bg-secondary">
				<h5>Horaires</h5>
				{% for openingDays in openingDays %}
				<p class="text-hover"><strong>{{ openingDays.days }}:</strong> {{ openingDays.open }}</p>
				{% endfor %}
			</div>
			<div class="col-md-4 text-center my-3 align-self-center">
				<h5>Satisfait de nos services ?</h5>
				<h5>Faites part de vos impressions !</h5><br>
				<a class="btn btn-secondary my-3" href="{{ path('app_testimonial')}}" role="button">Cliquez ici</a>
			</div>
			<div class="col-md-4 text-center my-3 bg-secondary py-4">
				<div class="d-flex flex-column align-items-center justify-content-center">
					<h5>Adresse</h5>
					<p class="m-0 text-hover">{{ address.street }}</p>
					<p class="m-0 text-hover">{{ address.city }}</p>
					<p class="m-0 text-hover">{{ address.zipCode }}</p>
					<h5>Téléphone</h5>
					<p class="m-0 text-hover">
						<a href="tel:{{ address.phoneNumber }}" class="text-black">{{ address.phoneNumber }}</a>
					</p>
				</div>
			</div>
		</div>
	</div>
</footer>
